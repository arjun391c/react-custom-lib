{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "rootDir": "src",
        "declaration": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        ".storybook",
        "storybook-static",
        "dist",
        "src/**/*.stories.tsx",
        "src/**/*.test.tsx",
        "src/setupTests.ts"
    ]
}
